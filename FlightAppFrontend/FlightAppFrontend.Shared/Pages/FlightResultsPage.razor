@page "/results"
@using FlightAppFrontend.Shared.Components.Loaders

<FlightResultsLoader FlightIATA="@FlightIATA" DepartureIATA="@DepartureIATA" ArrivalIATA="@ArrivalIATA" Date="@Date" PageNumber="PageNumber" PageSize="PageSize"/>

@code{
    [SupplyParameterFromQuery(Name="flight_iata")]
    public string? FlightIATA { get; set; }

    [SupplyParameterFromQuery(Name="departures")]
    public string? DepartureIATA { get; set; }

    [SupplyParameterFromQuery(Name="arrivals")]
    public string? ArrivalIATA { get; set;  }

    [SupplyParameterFromQuery(Name = "date")]
    public string? Date { get; set; }

    [SupplyParameterFromQuery(Name = "page_number")]
    public int PageNumber { get; set; }

    [SupplyParameterFromQuery(Name = "page_size")]
    public int PageSize { get; set; }
}